		</ul>
		<div class="tab-content">
		<?php foreach (Model_Lang_Part::$languages as $locale => $language) : ?>
			<div class="tab-pane <?php if($locale == I18n::lang()):?>active<?php endif; ?>" id="tab<?php echo $locale; ?>">
