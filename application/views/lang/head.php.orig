						<?php echo Form::textarea( 'lang_part['.$locale.'][description]', isset($parts[$locale]) ? $parts[$locale]->description : NULL, array(
							'id' => 'form_description_'.$locale, 'rows' => 3, 'class' => 'input-xlarge'
						)); ?>
					</div>
